<Window x:Class="SwordDamage_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordDamage_WPF"
        mc:Ignorable="d"
        Title="Sword Damage" Height="175" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="flaming" Content="Flaming" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="Flaming_Checked" Unchecked="Flaming_Unchecked"/>
        <CheckBox x:Name="magic" Content="Magic" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Checked="Magic_Checked" Unchecked="Magic_Unchecked"/>
        <Button Content="Roll for Damage" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="16" Grid.ColumnSpan="2" Click="Button_Click"/>
        <TextBlock x:Name="damage" HorizontalAlignment="Center" Grid.Row="2" Text="damage" TextWrapping="Wrap" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="16"/>

    </Grid>
</Window>
